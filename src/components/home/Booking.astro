---
import { Image } from "astro:assets";
import booking from "../../assets/booking.png";
import BookingContent from "./BookingContent.astro";
---

<section
  class="px-3 sm:px-5 md:px-7 lg:px-10 xl:px-16 2xl:px-20 mt-28 xl:mt-20 w-full relative z-40"
>
  <div class="container mx-auto">
    <div
      class="flex flex-col lg:flex-row lg:justify-between items-center justify-center w-full"
    >
      <BookingContent />
      <figure class="relative right-0">
        <Image
          src={booking}
          alt={"booking"}
          class={"object-cover"}
          width={700}
          height={700}
        />
      </figure>
    </div>
  </div>
</section>
