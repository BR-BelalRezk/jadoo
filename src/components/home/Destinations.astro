---
import { Image } from "astro:assets";
import { desitnations } from "../../constants";
import SectionHeader from "./SectionHeader.astro";
import arrow from "../../assets/arrow.svg";
import circular from "../../assets/circular.svg";
---

<section
  class="px-3 sm:px-5 md:px-7 lg:px-10 xl:px-16 2xl:px-20 mt-28 xl:mt-40 w-full relative z-40"
>
  <div class="container mx-auto">
    <div class="w-full flex items-center justify-center flex-col gap-16">
      <SectionHeader text="Top Selling" header="Top Destinations" />
      <div
        class="flex items-center justify-center gap-10 flex-wrap xl:gap-0 xl:justify-between w-full"
      >
        {
          desitnations.map((item, index) => (
            <div
              class={`relative bg-transparent  ${index === 2 ? "md:border-2  border-dashed  w-[315px] md:w-[390px] md:pr-20 md:py-1.5" : "w-[315px]"}`}
            >
              <figure class=" rounded-3xl custom_drop_shadow relative">
                <Image
                  src={item.image}
                  alt={item.country}
                  width={314}
                  height={457}
                  class={" w-[314px] h-[457px] rounded-3xl"}
                />
                {index === 2 && (
                  <Image
                    src={circular}
                    alt={"circular"}
                    class={"absolute -z-10 top-1/4 -right-16 hidden md:block"}
                  />
                )}
              </figure>
              <div
                class={`${index === 2 ? "md:w-[308px] w-[316px]" : "w-[316px]"} flex font-poppins font-normal flex-col items-start justify-start gap-5 px-3 -left-px -bottom-px rounded-b-3xl  bg-white absolute py-5`}
              >
                <div class="flex w-full items-center justify-between text-[#5E6282]  text-lg leading-[22.41px]">
                  <h3>{item.country}</h3>
                  <span>{item.price}</span>
                </div>
                <div class="flex items-center justify-center gap-3">
                  <Image src={arrow} alt={"arrow"} />
                  <span class="text-base leading-[19.92px]">
                    {item.days} Days trip
                  </span>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .custom_drop_shadow {
    box-shadow: 0px 1.85px 3.15px 0px #00000001;

    box-shadow: 0px 8.15px 6.52px 0px #00000002;

    box-shadow: 0px 20px 13px 0px #00000003;

    box-shadow: 0px 38.52px 25.48px 0px #00000003;

    box-shadow: 0px 64.81px 46.85px 0px #00000004;

    box-shadow: 0px 100px 80px 0px #00000005;
  }
</style>
