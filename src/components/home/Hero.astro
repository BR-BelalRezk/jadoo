---
import { Image } from "astro:assets";
import HeroContent from "./HeroContent.astro";
import heroImage from "../../assets/heroImage.png";
---

<section
  class="px-3 sm:px-5 md:px-7 lg:px-10 xl:px-16 2xl:px-20 mt-10 xl:mt-20 w-full relative z-40"
>
  <div class="container mx-auto">
    <div
      class="w-full flex items-start justify-center gap-10 flex-col lg:flex-row lg:justify-between lg:gap-0"
    >
      <HeroContent />
      <figure>
        <Image
          class={"object-cover"}
          src={heroImage}
          alt={"hero-image"}
          width={750}
          height={764}
        />
      </figure>
    </div>
  </div>
</section>
