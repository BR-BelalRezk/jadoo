---
import { Image } from "astro:assets";
import CTACircle_1 from "../../assets/CTACircle_1.svg";
import CTACircle_2 from "../../assets/CTACircle_2.svg";
import telegram from "../../assets/telegram.svg";
import gmail from "../../assets/gmail.svg";
import pluses from "../../assets/pluses.png";
---

<section
  class="px-3 sm:px-5 md:px-7 lg:px-10 xl:px-16 2xl:px-20 mt-[700px] lg:mt-80 xl:mt-40 w-full relative z-40"
>
  <div class="container mx-auto">
    <div
      class="relative z-50 max-w-[1170px] mx-auto h-[407px] bg-[#DFD7F9] bg-opacity-[20%] rounded-[129px_20px_20px_20px]"
    >
      <figure>
        <Image
          src={CTACircle_1}
          alt={"cta_1"}
          class={"absolute z-40 bottom-0 left-5 hidden lg:block"}
        />
      </figure>
      <figure>
        <Image
          src={telegram}
          alt={"telegram"}
          class={"absolute -top-5 -right-7 z-50 hidden lg:block"}
        />
      </figure>
      <figure>
        <Image
          src={CTACircle_2}
          alt={"cta_2"}
          class={"absolute z-40 right-0 top-0 hidden lg:block"}
        />
      </figure>
      <figure>
        <Image
          src={pluses}
          alt={"pluses"}
          width={153}
          height={166}
          class={"absolute -right-[55px] -bottom-[81px] -z-30 hidden lg:block"}
        />
      </figure>
      <div class="flex items-center justify-between flex-col relative z-50">
        <p
          class="text-center pt-20 max-w-[881px] mx-auto text-[#5E6282] font-poppins font-semibold px-3 sm:px-0 text-lg sm:text-[33px] sm:leading-[54px]"
        >
          Subscribe to get information, latest news and other interesting offers
          about Jadoo
        </p>
        <div
          class="pb-10 flex items-center flex-col sm:flex-row justify-center gap-5"
        >
          <div class="relative">
            <input
              type="text"
              class="sm:w-[421px] h-[68px] pl-16 border border-[#39425D] rounded-[10px] outline-none"
              placeholder="Your email"
            />
            <Image
              src={gmail}
              alt={"gmail"}
              class={"absolute top-[38%] left-5"}
            />
          </div>
          <button
            class="font-openSans font-semibold text-[17px] leading-[23.15px] px-10 py-5 text-white rounded-[10px] bg-[linear-gradient(180deg,#FF946D_0%,#FF7D68_100%)]"
            >Subscribe</button
          >
        </div>
      </div>
    </div>
  </div>
</section>
