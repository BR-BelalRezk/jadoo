---
import { Image } from "astro:assets";
import { footerMobile, footerSocials } from "../../constants";
---

<div class="flex items-center justify-center flex-col gap-3">
  <ul class="flex items-center justify-center gap-3">
    {
      footerSocials.map((item) => (
        <li>
          <Image src={item} alt={"icon"} width={41} height={41} />
        </li>
      ))
    }
  </ul>
  <p
    class="text-[#5E6282] font-poppins text-[20px] font-normal leading-[24.9px] tracking-[0.005em] text-left"
  >
    Discover our app
  </p>
  <ul class="flex items-center justify-center gap-3">
    {
      footerMobile.map((item) => (
        <li>
          <Image src={item} alt={"icon"} width={100} height={35} />
        </li>
      ))
    }
  </ul>
</div>
